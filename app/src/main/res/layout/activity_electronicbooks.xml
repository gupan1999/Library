<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Electronicbooks"
    android:background="@drawable/jbshape"
    android:fitsSystemWindows="true">

    <com.example.version1.customed.TitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/electronicbookre"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="49dp">

        <TextView
            android:id="@+id/electronictitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子书刊"
            android:textSize="25dp"
            android:textColor="#4CAEC3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.example.version1.customed.TitleLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/electronicbookre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout"/>

</android.support.constraint.ConstraintLayout>